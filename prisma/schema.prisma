// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client"
  output   = "../lib/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model InviteToken {
  id        String   @id @default(cuid())
  token     String   @unique
  used      Boolean  @default(false)
  createdAt DateTime @default(now())
  guest     Guest?
}

model Guest {
  id            String      @id @default(cuid())
  name          String
  inviteTokenId String      @unique
  inviteToken   InviteToken @relation(fields: [inviteTokenId], references: [id])
  createdAt     DateTime    @default(now())
  page          Page?
}

model Page {
  id         String   @id @default(cuid())
  guestId    String   @unique
  guest      Guest    @relation(fields: [guestId], references: [id])
  layoutType String   @default("grid") // grid, collage, hero, freeform
  canvasData Json?    // Store Fabric.js/Konva.js state
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
  media      Media[]
}

model Media {
  id        String    @id @default(cuid())
  pageId    String
  page      Page      @relation(fields: [pageId], references: [id], onDelete: Cascade)
  type      String    // "photo" or "video"
  s3Key     String
  url       String    // Full S3 URL
  caption   String?
  location  String?   // Place name from Google Places
  dateTaken DateTime? // From EXIF or user input
  position  Json?     // {x, y, width, height, rotation} for canvas
  createdAt DateTime  @default(now())
}
