generator client {
  provider = "prisma-client"
  output   = "../lib/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model InviteToken {
  id        String   @id @default(cuid())
  token     String   @unique
  used      Boolean  @default(false)
  createdAt DateTime @default(now())
  guest     Guest?
}

model Guest {
  id            String      @id @default(cuid())
  name          String
  inviteTokenId String      @unique
  createdAt     DateTime    @default(now())
  inviteToken   InviteToken @relation(fields: [inviteTokenId], references: [id])
  page          Page?
}

model Page {
  id         String   @id @default(cuid())
  guestId    String   @unique
  layoutType String   @default("grid")
  canvasData Json?
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
  media      Media[]
  guest      Guest    @relation(fields: [guestId], references: [id])
}

model Media {
  id        String    @id @default(cuid())
  pageId    String
  type      String
  s3Key     String
  url       String
  caption   String?
  location  String?
  dateTaken DateTime?
  position  Json?
  createdAt DateTime  @default(now())
  latitude  Float?
  longitude Float?
  page      Page      @relation(fields: [pageId], references: [id], onDelete: Cascade)
}
